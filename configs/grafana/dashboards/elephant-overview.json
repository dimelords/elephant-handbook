{
  "dashboard": {
    "title": "Elephant Overview",
    "tags": ["elephant", "overview"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "type": "graph",
        "title": "Request Rate by Service",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=~\"elephant.*\"}[5m])) by (job)",
            "legendFormat": "{{job}}"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "type": "graph",
        "title": "Request Latency (P95)",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=~\"elephant.*\"}[5m])) by (job, le))",
            "legendFormat": "{{job}}"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Latency"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 8},
        "type": "stat",
        "title": "Documents Created (24h)",
        "targets": [
          {
            "expr": "sum(increase(documents_created_total[24h]))"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        }
      },
      {
        "id": 4,
        "gridPos": {"h": 6, "w": 8, "x": 8, "y": 8},
        "type": "stat",
        "title": "Document Updates (24h)",
        "targets": [
          {
            "expr": "sum(increase(documents_updated_total[24h]))"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        }
      },
      {
        "id": 5,
        "gridPos": {"h": 6, "w": 8, "x": 16, "y": 8},
        "type": "stat",
        "title": "Search Queries (24h)",
        "targets": [
          {
            "expr": "sum(increase(search_queries_total[24h]))"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        }
      },
      {
        "id": 6,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 14},
        "type": "graph",
        "title": "Error Rate",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=~\"elephant.*\",status=~\"5..\"}[5m])) by (job)",
            "legendFormat": "{{job}}"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Errors/sec"},
          {"format": "short"}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [0.05], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "name": "Error rate alert",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 7,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 14},
        "type": "graph",
        "title": "Index Lag",
        "targets": [
          {
            "expr": "index_lag_seconds",
            "legendFormat": "Lag (seconds)"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Lag"},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 22},
        "type": "graph",
        "title": "Database Connections",
        "targets": [
          {
            "expr": "sum(pg_stat_database_numbackends) by (instance)",
            "legendFormat": "Active connections - {{instance}}"
          },
          {
            "expr": "pg_settings_max_connections",
            "legendFormat": "Max connections"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Connections"},
          {"format": "short"}
        ]
      },
      {
        "id": 9,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 22},
        "type": "graph",
        "title": "OpenSearch Cluster Health",
        "targets": [
          {
            "expr": "opensearch_cluster_health_status{status=\"green\"}",
            "legendFormat": "Green"
          },
          {
            "expr": "opensearch_cluster_health_status{status=\"yellow\"}",
            "legendFormat": "Yellow"
          },
          {
            "expr": "opensearch_cluster_health_status{status=\"red\"}",
            "legendFormat": "Red"
          }
        ]
      },
      {
        "id": 10,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 30},
        "type": "graph",
        "title": "Memory Usage",
        "targets": [
          {
            "expr": "sum(container_memory_working_set_bytes{namespace=\"elephant\"}) by (pod) / 1024 / 1024 / 1024",
            "legendFormat": "{{pod}}"
          }
        ],
        "yaxes": [
          {"format": "decgbytes", "label": "Memory"},
          {"format": "short"}
        ]
      },
      {
        "id": 11,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 30},
        "type": "graph",
        "title": "CPU Usage",
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=\"elephant\"}[5m])) by (pod) * 100",
            "legendFormat": "{{pod}}"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "CPU %"},
          {"format": "short"}
        ]
      },
      {
        "id": 12,
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 38},
        "type": "table",
        "title": "Service Status",
        "targets": [
          {
            "expr": "up{job=~\"elephant.*\"}",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true
              },
              "indexByName": {},
              "renameByName": {
                "Value": "Status",
                "job": "Service",
                "instance": "Instance"
              }
            }
          }
        ]
      }
    ],
    "refresh": "30s",
    "schemaVersion": 27,
    "style": "dark",
    "templating": {
      "list": [
        {
          "name": "datasource",
          "type": "datasource",
          "query": "prometheus",
          "current": {
            "text": "Prometheus",
            "value": "Prometheus"
          }
        },
        {
          "name": "environment",
          "type": "custom",
          "query": "development,staging,production",
          "current": {
            "text": "production",
            "value": "production"
          }
        }
      ]
    },
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "uid": "elephant-overview",
    "version": 1
  }
}
